<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".PlanList">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/appBar1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#444145"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_menu_" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/menuIcon"
                android:textStyle="bold"
                android:text="Loan Management"
                android:textColor="@color/white"
                android:textSize="22dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/massage"
            android:text=""
            android:textSize="20dp"
            android:textColor="#E10A0A"
            android:textStyle="bold"
            android:textAlignment="center"/>
<!--Recyler view kaha lagaye ho-->
        <LinearLayout
            android:layout_width="match_parent"
           android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:text="Account Id"
                android:textColor="@color/black"
                android:textSize="9dp" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:text="AccountOpenDate"
                android:textColor="@color/black"
                android:textSize="9dp" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:text="MIP Amount"
                android:textColor="@color/black"
                android:textSize="9dp" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:text="Maturity Amount"
                android:textColor="@color/black"
                android:textSize="9dp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:text="Plan Amount"
                android:textColor="@color/black"
                android:textSize="9dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:text="Plan No"
                android:textColor="@color/black"
                android:textSize="9dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:text="Plan Type"
                android:textColor="@color/black"
                android:textSize="9dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="7">
            <TextView
                android:id="@+id/accountId1"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="Welcome"
                android:textColor="#0C83E1"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/oDate1"
                android:layout_width="80dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Welcome"

                android:textColor="#EF0B0B"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/mAmmount1"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:text="Welcome"
                android:textAlignment="center"
                android:textColor="#E30E0E"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/maturatityAmmount1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:text="Welcome"
                android:textAlignment="center"
                android:textColor="#DC1A1A"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/pAmmount1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:text="Welcome"
                android:textAlignment="center"
                android:textColor="#DC1A1A"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/pNo1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:text="Welcome"
                android:textAlignment="center"
                android:textColor="#DC1A1A"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/pType1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:text="Welcome"
                android:textAlignment="center"
                android:textColor="#DC1A1A"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="7">
            <TextView
                android:id="@+id/accountId2"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="Welcome"
                android:textColor="#EF0B0B"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/oDate2"
                android:layout_width="80dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Welcome"
                android:textColor="#EF0B0B"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/mAmmount2"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:text="Welcome"
                android:textAlignment="center"
                android:textColor="#E30E0E"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/maturatityAmmount2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:text="Welcome"
                android:textAlignment="center"
                android:textColor="#DC1A1A"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/pAmmount2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:text="Welcome"
                android:textAlignment="center"
                android:textColor="#DC1A1A"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/pNo2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:text="Welcome"
                android:textAlignment="center"
                android:textColor="#DC1A1A"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/pType2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1"
                android:text="Welcome"
                android:textAlignment="center"
                android:textColor="#DC1A1A"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>

